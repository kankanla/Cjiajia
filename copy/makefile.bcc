#
# Makefile for Borland's Borland-C++ compiler
#
CC=bcc32
#
# Flags 
#     	-N  -- Check for stack overflow
#	-v  -- Enable debugging
#	-w  -- Turn on all warnings
#	-tWC -- Console application
#
CFLAGS=-N -v -w -tWC
all: copy.exe

copy.exe: copy.cpp
	$(CC) $(CFLAGS) -ecopy copy.cpp

clean:
	erase copy.exe
